.col-md-3.no-padding.inline-block
	%nav.medium
		.green.white-text.col-md-12
			Admin General
.col-md-9.inline-block.in-top
	.card.large-padding
		.col-md-9.inline-block
			%h1= @product.name
		.col-md-3.inline-block
			%p.big.no-margin.red-text 
				=@product.sales_total / 100
				USD
		%nav.top-space
			=link_to product_path(id: @product,client:true), class:"other-grey large-padding text-center col-md-4 inline-block" do 
				Ver como cliente
			=link_to edit_product_path(@product), class:"other-grey large-padding text-center col-md-4 inline-block" do 
				Editar Producto
			=link_to @product,method: :delete, class:"other-grey large-padding text-center col-md-4 inline-block",data: { confirm: '¿Seguro que deseas eliminar el producto?' } do 
				Eliminar Producto
		%div
			%h3.grey-text Archivos
			%ol 
				-@product.attachments.each do |attachment|
					%li.large-padding.medium.grey-text.other-grey
						.col-xs-11.inline-block= link_to attachment.archivo_file_name,attachment
						.col-xs-1.inline-block
							=link_to attachment, method: :delete,:"data-confirm" => "¿Seguro que deseas eliminar el archivo?",class:"red-text" do
								X

			=render "attachments/form",product_id: @product.id




